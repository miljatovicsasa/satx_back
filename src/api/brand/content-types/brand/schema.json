{
  "kind": "collectionType",
  "collectionName": "brands",
  "info": {
    "singularName": "brand",
    "pluralName": "brands",
    "displayName": "Brand"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "country": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "watches": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::watch.watch",
      "mappedBy": "brand"
    }
  }
}
